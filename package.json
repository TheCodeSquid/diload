{
  "name": "diload",
  "version": "0.4.0",
  "description": "A simple bundler for directory-based trees of data",
  "keywords": [
    "json",
    "filesystem",
    "tree",
    "bundler"
  ],
  "author": "CodeSquid",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build": "rollup -c",
    "watch": "rollup -cw",
    "prepare": "pnpm clean && pnpm build"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/node": "^18.11.9",
    "rimraf": "^3.0.2",
    "rollup": "^3.2.5",
    "tslib": "^2.4.1",
    "typescript": "^4.8.4"
  }
}
